</svg>
      <span class="inline-block ml-2">Resume</span>
    </a>
  </div>
  <img class="object-cover object-right p-1 mb-8 border rounded-lg shadow-md cursor-pointer lg:mb-0 transform transition -rotate-6 hover:rotate-0 hover:scale-105 hover:shadow-xl w-72 h-72" src="/assets/img/profile-photo.jpg" alt="">
</div>


<script>
// Wrap every letter in a span
var textWrapper = document.querySelector('.ml9 .letters');
textWrapper.innerHTML = textWrapper.textContent.replace(/\S/g, "<span class='letter'>$&</span>");

anime.timeline({loop: false})
  .add({
    targets: '.ml9 .letter',
    scale: [0, 1],
    duration: 1500,
    elasticity: 600,
    delay: (el, i) => 45 * (i+1)
  })
</script>
